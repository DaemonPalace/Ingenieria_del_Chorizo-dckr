services:
  web:
    image: nginx:latest
    build:
      context: ./nginx
      dockerfile: Dockerfile
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/frontend:/usr/share/nginx/html
      - ./nginx/certs:/etc/nginx/certs:ro
    networks:
      - app-network
    depends_on:
      - backend

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    working_dir: /app
    ports:
      - "3000:3000"
    env_file:
      - ./backend/arepabuelas-dckr-backend.env
    networks:
      - app-network
    depends_on:
      - db
      - minio

  db:
    image: postgres:15
    env_file:
      - ./db/arepabuelas-dckr-db.env
    volumes:
      - ./db/data:/var/lib/postgresql/data
      - ./db/init.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - app-network

  minio:
    image: minio/minio:latest
    env_file:
      - ./minio/arepabuelas-dckr-minio.env
    volumes:
      - ./minio/data:/data
    command: server /data --console-address ":9001"
    ports:
      - "9001:9001"
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
